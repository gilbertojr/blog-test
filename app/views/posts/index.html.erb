<h1 style="float:left; margin:1em">Posts</h1> <%= link_to 'New post', new_post_path %>
<div style="clear:both">

<% @posts.each do |post| %>

<h3><%= link_to post.title, post %></h3>

<p><%=h post.content %></p>

<p><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Delete', post, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
</p>