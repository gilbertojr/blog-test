<h1>New Comment</h1>
<% form_for([@post, @comment]) do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :commenter %><br/>
		<%= f.text_field :commenter %>
	</p>
	<p>
		<%= f.label :body, "Body" %><br />
		<%= f.text_area :body %>
	<p>
		<%= f.submit "Create", :disable_with => 'Submiting...' %>
	</p>
<% end %>

<%= link_to "Back", post_comments_path(@post) %>